<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="rootPane" prefHeight="700.0" prefWidth="900.0"
            fx:controller="org.group13.chessgame.controller.ChessController" styleClass="root-pane">
    <center>
        <GridPane fx:id="boardGridPane" alignment="CENTER" hgap="0" vgap="0" styleClass="board-grid-pane">
        </GridPane>
    </center>
    <right>
        <VBox fx:id="controlPanel" alignment="TOP_CENTER" prefWidth="200.0" spacing="10"
              styleClass="control-panel">
            <padding>
                <Insets top="20" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="turnLabel" text="White to move" styleClass="turn-label"/>
            <Button fx:id="newGameButton" text="New Game" onAction="#handleNewGame" prefWidth="150"
                    styleClass="game-button, new-game-button"/>
            <Button fx:id="undoMoveButton" text="Undo Last Move" onAction="#handleUndoMove" prefWidth="150"
                    styleClass="game-button, undo-button"/>
            <Label fx:id="statusLabel" text="" styleClass="status-label"/>

            <Label text="Captured by White:" styleClass="captured-pieces-title"/>
            <VBox fx:id="capturedByWhiteArea" minHeight="50" styleClass="captured-pieces-area, white-captures"/>
            <Label text="Captured by Black:" styleClass="captured-pieces-title"/>
            <VBox fx:id="capturedByBlackArea" minHeight="50" styleClass="captured-pieces-area, black-captures"/>

            <Label text="Move History:" styleClass="move-history-title"/>
            <ListView fx:id="moveHistoryListView" prefHeight="200.0" styleClass="move-history-list"/>

        </VBox>
    </right>
</BorderPane>
